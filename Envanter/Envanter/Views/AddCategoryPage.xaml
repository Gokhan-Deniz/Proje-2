<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Envanter.Views.AddCategoryPage"
             Title="Kategori Ekleme">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="White" Offset="0.0" />
            <GradientStop Color="Orange" Offset="0.7" />
            <GradientStop Color="Blue" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
        <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/Mersin_University_logo.svg/512px-Mersin_University_logo.svg.png"
               HeightRequest="150"
               WidthRequest="180"
               Aspect="AspectFill"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0,0,0,40">
        </Image>
        <Entry x:Name="categoryNameEntry" Placeholder="Kategori Adını Girin" 
               FontSize="Large" FontAttributes="Bold" TextColor="White" 
               Margin="0,10" />
        <Button Text="Kategori Ekle" Clicked="OnAddCategoryButtonClicked" 
                BackgroundColor="#fd684d" TextColor="White" FontSize="Large" 
                FontAttributes="Bold" CornerRadius="10" Padding="10" />
    </StackLayout>
</ContentPage>
